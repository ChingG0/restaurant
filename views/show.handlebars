<div class="container py-5">
  <div class="text-center">
    <h1 class="mb-4">{{restaurant.name}}</h1>
    <img
      class="rounded mb-5"
      src="{{restaurant.image}}"
      alt="Card image cap"
      style="max-height: 300px;"
    />
  </div>
  <div class="d-flex flex-row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 w-50">
      <p class="text-secondary mb-1">
        <ul class="d-flex flex-column list-unstyled">
            <li><strong>rating: </strong>{{ restaurant.rating}}</li>
            <li><strong>restaurant location: </strong>{{restaurant.location}}</li>
            <li><strong>phone: </strong>{{ restaurant.phone}}</li>
            <li> <strong>google map: <a href="{{ restaurant.google_map}}">{{ restaurant.name_en}}</a></li>
        </ul>
      </p>
      <p>
        {{restaurant.description}}
      </p>
    </div>
  </div>
</div>