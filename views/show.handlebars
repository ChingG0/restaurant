<div class="container d-flex justify-content-around">
  <div class="row-lg-6">
    <div class="photo text-center ">
      <h1 class="mb-4">{{restaurant.name}}</h1>
      <img class="rounded mb-5" src="{{restaurant.image}}" alt="Card image cap" style="max-height: 300px;" />
    </div>
    <div class="description">
      <ul class="d-flex flex-column list-unstyled">
        <li><strong>rating: </strong>{{ restaurant.rating}}</li>
        <li><strong>restaurant location: </strong>{{restaurant.location}}</li>
        <li><strong>phone: </strong>{{ restaurant.phone}}</li>
        <li> <strong>google map: <a href="{{ restaurant.google_map}}">{{ restaurant.name_en}}</a></li>
      </ul>
      </p> {{restaurant.description}}</p>
    </div>
  </div>
  <div class="row-lg-6">
    <iframe class="map" src="{{restaurant.mapscript}}" allowfullscreen="" loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
</div>
<div class="container d-flex justify-content-around">
    <div class="reservation row-lg-6">
    <div class="reservation-title">
      <h2>Make a Reservation</h2>
    </div>
    <div class="selectdate">
      <input type="date" class="datepicker" id="date" name="date">
    </div>
    <div class="row">
      <div class="col-lg-5">
        <select class="form-select" aria-label="Default select example">
          <option selected>時間</option>
          <option value="1">5:30</option>
          <option value="1">6:00</option>
          <option value="1">6:30</option>
          <option value="1">7:00</option>
          <option value="1">7:30</option>
          <option value="1">8:00</option>
          <option value="1">8:30</option>
          <option value="1">9:00</option>
          <option value="1">9:30</option>
          <option value="1">10:00</option>
          <option value="1">10:30</option>
          <option value="1">11:00</option>
          <option value="1">11:30</option>
          <option value="1">12:00</option>
          <option value="1">12:30</option>
          <option value="1">1:00</option>
          <option value="1">1:30</option>
          <option value="1">2:00</option>
          <option value="1">2:30</option>
          <option value="1">3:00</option>
          <option value="1">3:30</option>
          <option value="1">4:00</option>
          <option value="1">4:30</option>
          <option value="1">5:00</option>
        </select>
      </div>
      <div class="col-lg-3">
        <select class="form-select ampm" aria-label="Default select example">
          <option value="am">am</option>
          <option value="pm">pm</option>
        </select>
      </div>
      <div class="col-lg-4">
        <select class="form-select" aria-label="Default select example">
          <option selected>人數</option>
          <option value="1">1 人</option>
          <option value="2">2 人</option>
          <option value="3">3 人</option>
          <option value="4">4 人</option>
          <option value="5">5 人</option>
          <option value="6">6 人</option>
          <option value="7">7 人</option>
          <option value="8">8 人</option>
          <option value="9">9 人</option>
          <option value="10">10 人</option>
          <option value="10p">10+ 人</option>
        </select>
      </div>
    </div>
    <div class="find-a-table">
      <button>Find a table</button>
    </div>
  </div>

</div>